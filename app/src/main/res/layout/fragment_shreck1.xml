<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Shreck1Fragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Shreck"
        android:layout_width="336dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/white"
        app:cardElevation="0dp"
        android:focusable="true"
        android:checkable="true"
        app:checkedIcon="@drawable/ic_baseline_bug_report_24"
        app:checkedIconTint="@android:color/white"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pwa_list_rect_1024_b482663c5eb139c66c39134f0f4001e9">

            <Button
                android:id="@+id/containedIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/material_on_primary_emphasis_high_type"
                android:textColor="@color/black"
                android:text="@string/Play"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:text="@string/Shreck_forevermore"
                android:background="@color/black"
                android:textColor="@color/white"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="10dp"
                android:text="@string/Acters"
                android:background="@color/black"
                android:textColor="@color/white"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/longMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:text="@string/Time"
                android:background="@color/black"
                android:textColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>